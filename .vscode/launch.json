    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "${command:pickArgs}"
            ]
        },
        {
            "name": "Python Debugger: tiny onedigit simulation",
            "type": "debugpy",
            "request": "launch",
            "program": "calculate.py",
            "console": "integratedTerminal",
            "args": [
                "--digit", "3",
                "--max_value", "70",
                "--max_cost", "3",
                "--max_steps", "2",
                "--output_filename", "simple_run.json"
            ]
        }
    ]
}
