    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "${command:pickArgs}"
            ]
        },
        {
            "name": "Python Debugger: very simple simulation",
            "type": "debugpy",
            "request": "launch",
            "program": "calculate.py",
            "console": "integratedTerminal",
            "args": [ "--digit", "3", "--upper", "39", "--steps", "1" ]
        }
    ]
}
