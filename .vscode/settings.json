{
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/pdm.lock": true,
        "**/.hypothesis": true,
        "**/.mypy_cache": true,
        "**/.pdm-build": true,
        "**/.pdm-python": true,
        "**/.ruff_cache": true,
        "**/.venv": true,
        "**/*.swp": true
    },
    "python.analysis.typeCheckingMode": "basic",
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "modifications",
        "editor.defaultFormatter": "charliermarsh.ruff"
    }
}
